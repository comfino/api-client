{
	"name": "comfino/api-client",
	"type": "library",
	"description": "Modern PHP 8.2+ API client library for the Comfino payment gateway with PSR-18/PSR-7 support.",
	"keywords": [
		"comfino",
		"payment",
		"gateway",
		"api",
		"client",
		"psr-18",
		"psr-7",
		"pay later",
		"deferred payments",
		"bnpl",
		"installments"
	],
	"homepage": "https://github.com/comfino/api-client",
	"readme": "README.md",
	"minimum-stability": "stable",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Artur Kozubski",
			"email": "akozubski@comperia.pl",
			"homepage": "https://comfino.pl/api"
		}
	],
	"support": {
		"issues": "https://github.com/comfino/api-client/issues",
		"source": "https://github.com/comfino/api-client",
		"docs": "https://github.com/comfino/api-client#readme"
	},
	"config": {
		"allow-plugins": {
			"php-http/discovery": true
		}
	},
	"require": {
		"php": ">=8.2",
		"ext-json": "*",
		"psr/http-client": "^1.0",
		"psr/http-client-implementation": "*",
		"psr/http-factory": "^1.0",
		"psr/http-factory-implementation": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^11.1",
		"phpspec/prophecy-phpunit": "^2.2",
		"php-http/mock-client": "^1.6",
		"sunrise/http-factory": "^2.0",
		"nyholm/psr7": "^1.8"
	},
	"autoload": {
		"psr-4": {
			"Comfino\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Comfino\\": "tests/"
		}
	},
	"scripts": {
		"test": "vendor/bin/phpunit"
	}
}
